extends ./layaut/app

block contenido
    section(class="py-5")
        h2(class="text-center text-4xl font-extrabold pt-10")= pagina

        if propiedades.length
            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each propiedad in propiedades
                  div(class="bg-white shadow rounded-lg")
                    img(class="object-cover h-72 w-full" src=`/uploads/${propiedad.imagen}` alt=`imagen propiedad${propiedad.titulo}`)
                    div(class="p-5 space-y-3")
                      h3(class="text-2xl font.bold")=propiedad.titulo
                      h3(class="text-2xl font.bold")=propiedad.precio.nombre
                      a(class="p-3 w-full text-center bg-indigo-600 block rounded uppercase font-bold" href=`/propiedad/${propiedad.id}`) Mas informacion

        else 
            p(class="text-center text-gray-800 text-sm py-10") No Hay Resultados