extends ./layaut/app


block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")


block contenido
   
    div(class="py-5 ")
        h1(class="text-center text-4xl font-extrabold") Ubicación en el Mapa
    
        div(class="flex flex-col md:flex-row items-center py-10 gap-4")
         h2(class="text-sm uppercase text-gray-800 font-bold") Filtrar Propiedades:
         
         div(class="w-full md:w-auto flex items-center gap-2")
                label(for="categorias" class="text-sm w-24 uppercase text-gray-500 font-bold") Categorías
                select(id="categorias" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow" )
                    option(value="") - Seleccione -
                    each categoria in categorias
                        option(value=categoria.id )= categoria.nombre

         div(class="w-full md:w-auto flex items-center gap-2")
                label(for="precios" class="text-sm w-24 uppercase text-gray-500 font-bold") precios
                select(id="precios" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow" )
                    option(value="") - Seleccione -
                    each precio in precios
                        option(value=precio.id )= precio.nombre
       
            
        div(id="mapa-inicio" class="h-[600px]")   

        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold pt-10") Departamentos en Venta

            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each departamento in departamentos
                  div(class="bg-white shadow rounded-lg")
                    img(class="object-cover h-72 w-full" src=`/uploads/${departamento.imagen}` alt=`imagen departamento${departamento.titulo}`)
                    div(class="p-5 space-y-3")
                      h3(class="text-2xl font.bold")=departamento.titulo
                      h3(class="text-2xl font.bold")=departamento.precio.nombre
                      a(class="p-3 w-full text-center bg-indigo-600 block rounded uppercase font-bold" href=`/propiedad/${departamento.id}`) Mas informacion

        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold pt-10") Casas en Venta

            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each casa in casas
                  div(class="bg-white shadow rounded-lg")
                    img(class="object-cover h-72 w-full" src=`/uploads/${casa.imagen}` alt=`imagen casa${casa.titulo}`)
                    div(class="p-5 space-y-3")
                      h3(class="text-2xl font.bold")=casa.titulo
                      h3(class="text-2xl font.bold")=casa.precio.nombre
                      a(class="p-3 w-full text-center bg-indigo-600 block rounded uppercase font-bold" href=`/propiedad/${casa.id}`) Mas informacion


                             
block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/mapaInicio.js") 