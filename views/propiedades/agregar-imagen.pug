extends ../layaut/admin


block styles 
     //-esta es la hoja de estilos para para dropzone
     link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
     meta(name="csrf-token" content=csrfToken) 
block contenido

    div.py-10
       h1.text-4xl.my-10.font-extrabold.text-center Bienes
          span.font-normal Raices    

       h2.text-center.text-2xl.font-extrabold #{pagina}  

       

       div(class=" bg-white shadow py-8 rounded mx-auto max-w-xl my-10 md:px-10 ")  
          // i have to put this method="POST" action="/propiedades/crear" here. to be able set the formulario   
          form( id="imagen" class="dropzone border-dashed border-2 w-full min:h-96 h-auto rounded flex-col justify-center items-center" method="POST" action=`/propiedades/agregar-imagen/${propiedad.id}` noValidate space-y-5)
             // this here to enable the protetion csrf to the formularos
             input(type="hidden" name="_csrf" value=csrfToken) 

          button(id="publicar" class="mt-5 w-full py-3 bg-indigo-600 hover:bg-indigo-700 rounded text-white font-bold uppercase cursor-pointer" type="button" ) Publicar Propiedad

//-esto es para poder poner el mapa           
block scripts
    script(src="/js/agregarImagen.js")